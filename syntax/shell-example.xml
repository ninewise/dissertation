<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<language name="Shell" version="1" kateversion="2.4" section="Other" extensions="*.shell" mimetype="" author="Tim Hutt (tdhutt@gmail.com)" license="MIT">
  <highlighting>
    <contexts>
      <context attribute="Output" name="Output" lineEndContext="#stay" >
        <Detect2Chars char="$" char1=" " attribute="Command" context="Command" firstNonSpace="true"/>
      </context>
      <context attribute="Command" name="Command" lineEndContext="#stay">
        <DetectChar char="#" attribute="Comment" context="Comment"/>
        <RegExpr String="^[^ ]" context="Output" lookAhead="true"/>
      </context>
      <context attribute="Comment" name="Comment" lineEndContext="#pop"/>
    </contexts>
    <itemDatas>
      <itemData name="Output" defStyleNum="dsOperator"/>
      <itemData name="Comment" defStyleNum="dsComment"/>
      <itemData name="Command" defStyleNum="dsNormal"/>
    </itemDatas>
  </highlighting>
</language>
